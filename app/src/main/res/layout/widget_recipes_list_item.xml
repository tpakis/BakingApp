<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/material_list_dense_padding_vertical"
    android:paddingRight="@dimen/material_list_dense_padding_vertical"
    android:paddingStart="@dimen/material_list_dense_padding_vertical"
    android:paddingEnd="@dimen/material_list_dense_padding_vertical"
    android:minHeight="@dimen/material_list_dense_padding_vertical"
    android:weightSum="2"
    android:id="@+id/widgetItemContainer"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/widget_item_ingredient_name_label"
        android:layout_width="wrap_content"
        android:gravity="start"
        android:layout_weight="1"
        android:textColor="@color/material_color_white"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"/>

</LinearLayout>